<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- 定义 Appenders -->
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <!-- 手动设置不同级别的颜色 -->
                <Pattern>
                    %d{yyyy-MM-dd HH:mm:ss} [%t] %highlight{%-5level}{
                    FATAL=bg_red,
                    ERROR=red,
                    WARN=yellow,
                    INFO=green,
                    DEBUG=blue,
                    TRACE=cyan
                    } %c{1}:%L - %m%n
                </Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <!-- 定义 Loggers -->
    <Loggers>
        <!-- 根日志器 -->
        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
